{
  "name": "ssg",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "update-posts": "rm -rf node_modules/blog && npm install",
    "postinstall": "rm -rf ./posts && cp -r node_modules/blog/posts ./posts",
    "dev": "npm run build && concurrently \"npm run dev:html\" \"npm run dev:sass\" \"npm run dev:js\" \"npm start\"",
    "dev:js": "webpack --watch",
    "dev:html": "chokidar 'config.json' 'src/**/*' 'posts/**/*.md' -c 'npm run build:html'  -i 'src/resources/**/*'",
    "dev:sass": "npm run build:sass -- --watch src/resources/**/*.scss",
    "build": "npm run clean && npm run build:lib && npm run build:html && npm run build:js && npm run build:sass",
    "build:sass": "node-sass src/resources/scss/screen.scss dist/css/screen.css",
    "build:html": "rm -rf dist/**/*.html && node src/lib/build.js",
    "build:js": "webpack",
    "build:lib": "npm run copy:lib:sass",
    "copy:lib:sass": "rm -rf src/resources/scss/lib && mkdir src/resources/scss/lib && cp -r node_modules/highlight.js/styles/solarized-light.css src/resources/scss/lib/_solarized-light.scss",
    "clean": "ls dist | grep -v .htaccess | xargs -I {} rm -rf dist/{}",
    "deploy": "grunt deploy",
    "start": "http-server -p 1823 ./dist -c-1",
    "test": "mocha --opts test/mocha.opts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "blog": "git+ssh://git@github.com/scottyeck/blog.git",
    "dateformat": "^1.0.12",
    "fs-extra": "^0.30.0",
    "get-set": "git+ssh://git@github.com/scottyeck/getset.git",
    "highlight.js": "^9.4.0",
    "lodash": "4.11.2",
    "lodash.throttle": "^4.0.1",
    "meta-marked": "0.4.1",
    "node-sass": "3.7.0",
    "pug": "^2.0.0-alpha6",
    "sassline": "^2.1.2"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^2.1.0",
    "glob": "7.0.3",
    "grunt": "1.0.1",
    "grunt-cli": "1.2.0",
    "grunt-ftp-deploy": "^0.1.10",
    "http-server": "^0.9.0",
    "jquery": "^2.2.4",
    "lodash.debounce": "^4.0.6",
    "mocha": "2.4.5",
    "rfr": "1.2.3",
    "scss-grid-gen": "0.0.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1"
  }
}
